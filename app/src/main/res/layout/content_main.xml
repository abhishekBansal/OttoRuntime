<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moldedbits.ottoruntimesubscriptions.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Event1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btn_event1"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/content_main"
        android:layout_marginTop="72dp"/>

    <Button
        android:text="Event2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btn_event2"
        app:layout_constraintLeft_toRightOf="@+id/btn_event1"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_event1"/>

    <Button
        android:text="Event3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btn_event3"
        app:layout_constraintLeft_toRightOf="@+id/btn_event2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/btn_event2"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_event2"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>
